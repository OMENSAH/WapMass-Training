<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/calculator_editText_firstNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter First Number"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/calculator_editText_secondNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Second Number"
        android:inputType="number"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_marginTop="10dp"
        android:text="Add Numbers"
        android:id="@+id/calculator_button_addNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#000eee"
        android:id="@+id/calculator_textView_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>